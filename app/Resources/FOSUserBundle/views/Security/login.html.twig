{% extends "@FOSUser/layout.html.twig" %}

{% block title %}Défiez les FUNNY MONSTERS bientôt !{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/css/stylefouser.css') }}">
{% endblock %}

{% block font %}
    <link href="https://fonts.googleapis.com/css?family=Andika|Lato" rel="stylesheet">
{% endblock %}

{% block body %}
    <div class="content_fouser">
        <h2 id="main_title">Connectez-vous pour jouer !</h2>


        <div>
            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                <a href="">{{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }}</a> |
                <a href="{{ path('fos_user_security_logout') }}">
                    {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                </a>
            {% else %}
                <a href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>
            {% endif %}
            {#<a href="{{ path('fos_user_resetting_reset') }}">  {{ 'resetting.reset.submit'|trans({}, 'FOSUserBundle') }}</a>#}
        </div>

        {% block fos_user_content %}
            {{ include('@FOSUser/Security/login_content.html.twig') }}
        {% endblock fos_user_content %}

            <a href="{{ path('fos_user_registration_register') }}">Vous n'avez pas de compte ? Inscrivez vous !</a>

    </div>
{% endblock %}

