{% extends 'base.html.twig' %}

{% block body %}

    <div class="content_fouser">
        <h1 id="main_title">Espace joueur : {{ user.username }}</h1>
        <h2 id="main_title">Mes parties en cours</h2>

        <div class="table-responsive">
                <table class="table table-hover table-bordered">
                            <tr class="info">
                                <td>N° de la partie</td>
                                <td>Vous avez joué contre</td>
                                <td>Points du joueur 2</td>
                                <td>Vos points</td>
                                <td>Rejoindre cette partie</td>
                                {#<td>Début</td>#}
                                {#<td>Fin</td>#}
                            </tr>

                    {% for partie in parties if partie.joueur1 == app.user or partie.joueur2 == app.user  %}
                            <tr class="active">
                                <td>{{ partie.id }}</td>
                                <td>{{ partie.joueur2.username }}</td>
                                <td>{{ partie.pointJ2 }}</td>
                                <td>{{ partie.pointJ1 }}</td>
                                <td> <a href="{{ path('afficher_partie', {'id' : partie.id }) }}"> ici </a></td>
                                {#<td>{{ partie.debut }}</td>#}
                                {#<td>{{ partie.fin }}</td>#}
                            </tr>
                    {% else %}
                        Aucune partie en cours. <a href="{{ path('joueur_parties_add') }}">Créer une partie</a>
                    {% endfor %}
                </table>
        </div>
                <p class="home-button">
                    <a href="{{ path('joueur_homepage') }}">
                        <button type="button" class="btn btn-primary btn-xs">Retours</button>
                    </a>
                </p>
    </div>




{% endblock %}