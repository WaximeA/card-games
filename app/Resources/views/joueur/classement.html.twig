{% extends 'base.html.twig' %}

{% block body %}
    <div class="container text-center">
        <div class="row">
            <div class="col-lg-12">
                <h1>Classement des joueurs par partie gagnées</h1>

                <table class="table table-bordered">
                    <tr class="info">
                        <td><b>Joueurs</b></td>
                        <td><b>Parties gagnées</b></td>
                    </tr>
                    {% for joueur in joueurs %}
                    <tr class="info">
                        <td>{{ joueur.username }}</td>
                        <td>{{ joueur.partiesGG }}</td>
                    </tr>
                    {% endfor %}
                </table>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <h1>Classement des joueurs par points cumulés</h1>

                <table class="table table-bordered">
                    <tr class="info">
                        <td><b>Joueurs</b></td>
                        <td><b>Points cumulés</b></td>
                    </tr>
                    {% for joueur in joueurspt %}
                        <tr class="info">
                            <td>{{ joueur.username }}</td>
                            <td>{{ joueur.cumulPT }}</td>
                        </tr>
                    {% endfor %}
                </table>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <p class="home-button">
                    <a href="http://89.234.182.91/jeu">
                        <button type="button" class="btn btn-primary btn-xs">Page d'accueil</button>
                    </a>
                </p>
            </div>
        </div>
    </div>




{% endblock %}